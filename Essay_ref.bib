journal = {Journal of Geophysical Research},
keywords = {10.1002/2015JD023465 and foehn,Antarctica,Larsen Ice Shelf,Southern Annular Mode,climate,f{\"{o}}hn},
mendeley-groups = {Essay{\_}I{\_}GeoSistema},
